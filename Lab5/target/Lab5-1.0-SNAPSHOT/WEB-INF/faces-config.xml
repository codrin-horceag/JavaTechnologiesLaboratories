<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>welcome</base-name>
            <var>msg</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <managed-bean-name>ServiceLayer</managed-bean-name>
        <managed-bean-class>com.example.lab5.service.ServiceLayer</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>RepositoryLayer</managed-bean-name>
        <managed-bean-class>com.example.lab5.repositories.RepositoryLayer</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>Language</managed-bean-name>
        <managed-bean-class>com.example.lab5.LanguageBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
</faces-config>